<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Newsy" parent="Theme.Material3.Light.NoActionBar"></style>

    <style name="Theme.Newsy" parent="Base.Theme.Newsy" />

    <style name="textStyle">
        <item name="android:fontFamily">@font/amita_bold</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">18sp</item>
    </style>

    <style name="btnStyle">
        <item name="android:textColor">@color/white</item>
        <item name="android:fontFamily">@font/amita_bold</item>
        <item name="android:layout_width">220dp</item>
        <item name="android:background">@drawable/btn_shape</item>
        <item name="android:layout_height">120dp</item>
        <item name="android:textSize">30sp</item>
        <item name="android:textStyle">italic|bold</item>
    </style>
</resources>